generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  apiKeys   ApiKey[]
  tradeLogs TradeLog[]
}

model ApiKey {
  id           String   @id @default(uuid())
  key          String   @unique
  encryptedData String   @db.Text
  user         User     @relation(fields: [userId], references: [id])
  userId       String
  scopes       String
  expiry       DateTime
  createdAt    DateTime @default(now())
}

model TradeLog {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  instrument String
  amount     Float
  price      Float
  timestamp  DateTime @default(now())
}

model Metric {
  id         String   @id @default(uuid())
  name       String
  value      Float
  recordedAt DateTime @default(now())
}
